@model MOBOT.BHL.AdminWeb.Models.EditUserViewModel

@{
    ViewBag.Title = "Edit";
}

<style>
    .custom-control-label {
        padding-top:0px;
        margin-bottom:0px;
        text-align:right;
    }
    .formField {
        padding-top:0px;
    }
</style>
<br/>
<span class="pageHeader">Edit User Account</span>
<hr />

    <p>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true)
            <div class="form-group">
                @Html.LabelFor(model => model.UserName, new { @class = "custom-control-label col-md-2" })
                <div class="formField col-md-10">
                    @Html.DisplayFor(model => model.UserName)
                    @Html.HiddenFor(model => model.UserName)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.FirstName, new { @class = "custom-control-label col-md-2" })
                <div class="formField col-md-10">
                    @Html.EditorFor(model => model.FirstName)
                    @Html.ValidationMessageFor(model => model.FirstName)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.LastName, new { @class = "custom-control-label col-md-2" })
                <div class="formField col-md-10">
                    @Html.EditorFor(model => model.LastName)
                    @Html.ValidationMessageFor(model => model.LastName)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Email, new { @class = "custom-control-label col-md-2" })
                <div class="formField col-md-10">
                    @Html.EditorFor(model => model.Email)
                    @Html.ValidationMessageFor(model => model.Email)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.HomeInstitutionName, new { @class = "custom-control-label col-md-2" })
                <div class="formField col-md-10">
                    @Html.DropDownListFor(model => model.HomeInstitutionCode, new System.Web.Mvc.SelectList(ViewBag.Institutions, "Value", "Text"), htmlAttributes: new { @class = "formField", id = "HomeInstitutionCode" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Disabled, new { @class = "custom-control-label col-md-2" })
                <div class="formField col-md-10">
                    @Html.EditorFor(model => model.Disabled)
                    @Html.ValidationMessageFor(model => model.Disabled)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.LastLoginDateUtc, new { @class = "custom-control-label col-md-2" })
                <div class="formField col-md-10">
                    @Html.DisplayFor(model => model.LastLoginDateUtc)
                    @Html.HiddenFor(model => model.LastLoginDateUtc)
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
    </p>
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
