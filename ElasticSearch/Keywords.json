{
	"settings": {
		"number_of_shards": 5,
		"refresh_interval" : "30s",
		"merge": {
			"scheduler": {
				"max_thread_count": "1"
			}
		},
		"analysis": {
			"analyzer": {
				"default": {
					"tokenizer": "icu_tokenizer",
					"filter": [ "lowercase", "icu_folding" ]
				}
			}
		}
	},
	"mappings" : {
		"properties" : {
			"_all" : {
				"type" : "text"
			},
			"id" : {
				"type" : "long"
			},
			"keyword" : {
				"type" : "text",
				"analyzer" : "default",
				"fields" : {
					"raw" : {
						"type" : "keyword"
					}
				},
				"copy_to" : "_all"
			}
		}
	}
}