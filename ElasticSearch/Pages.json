{
	"settings": {
		"number_of_shards": 10,
		"merge": {
			"scheduler": {
				"max_thread_count": "1"
			}
		},
		"analysis": {
			"analyzer": {
				"default": {
					"tokenizer": "icu_tokenizer",
					"filter":  [ "lowercase", "icu_folding" ]
				},
				"remove_markup": {
					"tokenizer": "icu_tokenizer",
					"filter": [ "lowercase", "icu_folding" ],
					"char_filter": [ "replace_markup_char_filter" ]
				}
			},
			"char_filter": {
				"replace_markup_char_filter": {
					"type": "pattern_replace",
					"pattern": "\\[\\[.*?\\]\\]",
					"replacement": ""
				}
			}
		}
	},
	"mappings" : {
		"properties" : {
			"_all" : {
				"type" : "text"
			},
			"id" : {
				"type" : "keyword"
			},
			"itemId" : {
				"type" : "long"
			},
			"pageId" : {
				"type" : "long"
			},
			"names" : {
				"type" : "text",
				"analyzer" : "default",
				"fields" : {
					"raw" : {
						"type" : "keyword"
					}
				},
				"copy_to" : "_all"
			},
			"pageIndicators" : {
				"type" : "keyword"
			},
			"pageTypes" : {
				"type" : "keyword"
			},
			"segments" : {
				"type" : "long"
			},
			"sequence" : {
				"type" : "long"
			},
			"text" : {
				"type" : "text",
				"analyzer" : "remove_markup",
				"copy_to" : "_all"
			},
			"textPath" : {
				"type" : "keyword",
				"index" : false
			}
		}
	}
}