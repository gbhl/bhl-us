<configuration>
	<system.runtime.remoting>
		<application>
			<client>
				<!-- make sure to point address locally when running locally == tcp://localhost -->
				<wellknown url="tcp://server:port/MOBOT.FileAccess.FileAccessProvider.soap"
									type="MOBOT.FileAccess.IFileAccessProvider, MOBOT.FileAccess" />
			</client>
			<channels>
				<channel ref="tcp" port="0" />
				<clientProviders>
					<formatter ref="binary" />
				</clientProviders>
				<serverProviders>
					<formatter ref="binary" typeFilterlevel="High" />
				</serverProviders>
			</channels>
		</application>
	</system.runtime.remoting>
</configuration>